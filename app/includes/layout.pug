doctype html
html(lang="ru")
	head
		include helpers/mixins
		include helpers/data
		include bem/index
		
		block variables

		+add-meta('title', title)
		+add-meta('description', description)

		include layouts/head
		-
			set_bemto_settings({
				prefix: '',
				element: '__',
				modifier: '_'
			})
	body
		block nav
		div.site#page
			block header
				include layouts/header
			div.site-content#content
				block content
			block footer
				include layouts/footer
		block dev